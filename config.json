{
	"define":[
		"native", "mobile"
	],
	"env":{
		"API_KEY":"abc123",
		"API_SECRET":"123abc",
		"if":{
			"native":{
				"cpu":"amd"
			}
		}
	},
	"if":{
		"native":{
			"env":{
				"thread_count":8
			}
		},
		"native || mobile":{
			"env":{
				"name":"bob"
			}
		},
		"!native":{
			"env":{
				"thread_count":2
			}
		}
	},
	"var":{
		"in":"./src/",
		"out":"./bin/",
		"path":"[a-zA-Z0-9~/:]+",
		"if":{
			"native":{
				"name":"skial"
			}
		}
	},
	"(${path}/roundups/[0-9]/${path}).md$":{
		"mem":["_temp"],
		"cmd":[
			"cat $0 | #{_temp} | marked | ${out}/$1/index.html"
		]
	},
	"${path}${in}(${path}).hx$":{
		"mem":["_temp"],
		"_cmd":[
			"$0 > ${out}/$1\\.hx"
		]
	},
	"(${path}README).md$":{
		"cmd":[
			"cat $0 | $1\\2.md",
			"cat < $0 > $1\\3.md"
		]
	}
}